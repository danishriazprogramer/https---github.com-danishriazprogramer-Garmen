<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
  const productRowElm = document.getElementById('productRow');
  const url = 'http://localhost:8080/api/admin/getProducts';

  const getProducts = async () => {
    try {
      const response = await fetch(url);
      const data = await response.json();
      console.log(data);
      productRowElm.innerHTML = '';
      data?.data?.forEach(product => {
        const { imageUrl, name, unitPrice, discount, category, description } = product;
        const ribbonHtml = discount
          ? `<div class="discount-ribbon">
                <span>${discount}% OFF</span> 
            </div>`
          : null;
        productRowElm.innerHTML += `<div class="col-md-6 col-xl-4">
                                    <div class="card menu-card mb-3 shadow rounded-4">
                                        <div class="row g-0">
                                            <div class="col-lg-4 d-flex justify-content-center p-2 ">
                                                <img src="/uploads/products/${imageUrl}" class="img-fluid rounded-3 w-100" alt="${name}">
                                            </div>
                                            <div class="col-lg-8">
                                                <div class="card-body">
                                                    ${ribbonHtml} <!-- Include ribbonHtml here -->
                                                    <h5 class="card-title">${name} </h5>
                                                    <p class="card-text clamp-line-3">${description}</p>
                                                    <div class="card_bottom">
                                                        <h6>${unitPrice}â‚¬</h6>
                                                        <button class="btn btn-primary">Add to Cart</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>`;
      });

      const addToCartButtons = document.querySelectorAll('.add-to-cart');
      addToCartButtons.forEach(button => {
        button.addEventListener('click', event => {
          const productName = event.target.getAttribute('data-product-name');
          alert(`Added "${productName}" to cart.`);
        });
      });
    } catch (error) {
      console.log(error);
    }
  };

  getProducts();
</script>

